<%- partial('partials/header.ejs') %>
    <div class="container pt-5">
        <div class="jumbotron">
            <h1 class="h3">編集</h1>
            <form action="/todos/<%= todo.id %>" method="post">
                <input type="hidden" name="_method" value="put">
                <div class="form-group">
                    <label for="todoTitle" class="bmd-label-floating">タスク名</label>
                    <input id="todoTitle" name="todoTitle" type="text" class="form-control" value="<%= todo.title %>">
                </div>
                <div class="form-group">
                    <label for="todoContent" class="bmd-label-floating">タスク詳細</label>
                    <textarea id="todoContent" name="todoContent" type="text" class="form-control" rows="3"><%= todo.content %></textarea>
                </div>
                <button id="clearFormButton" class="btn btn-default">リセット</button>
                <button id="addTodoButton" type="submit" class="btn btn-primary btn-raised">更新</button>
            </form>
        </div>
    </div>
<%- partial('partials/footer.ejs') %>